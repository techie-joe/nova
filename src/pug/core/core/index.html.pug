extends ../../_core/_html

block append vars
  -
    pageid      = 'core'
    pageUrl     = siteUrl + '/core/index.html'
    title       = `Core`
    description = 'The Core Preview'
    author      = 'Techie Joe'

block append style
  style.
    ._a1m { margin-right:.25em }
    ._a1m._active { color:inherit }
    .nav a[href] { text-decoration:none }
    .nav a[href]:hover { text-decoration:underline }

block header
  header#_header
    h1 !{title}
    nav.nav
      +backLink| Back
    hr

block article
  article._article
    section(style="margin-bottom:10rem").nav
      +_a('blank.html')| Blank