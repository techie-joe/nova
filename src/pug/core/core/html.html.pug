extends ../../_core/_html

block append vars
  -
    pageid      = 'core/html'
    pageUrl     = siteUrl + '/core/html.html'
    title       = '[untitled]'
    description = '[undescribed]'

block header
  header._container
    pre.
      Hello, there.
      This is a placeholder to get you started.
      Copy the code from '!{pageid}' to create your own page.

      #[a(href='./') Back]
    hr

block article
  article._container
    pre: +pageData()

block footer
  footer
    hr
    - author = 'Techie Joe'
    ._container: small| &copy; !{year} !{author}
