extends ../../main/_html

block append vars
  -
    pageid      = 'core/details'
    pageUrl     = siteUrl + '/core/details.html'
    title       = `Details | ${name}`
    description = 'Styling details and summary elements.'

block append style
  style.
  //- style.

block header
  header._container
    +logo
    span#maindesc= description
  +main_nav

block article
  +core_nav
  hr
  article(style="padding-bottom:4em")

    section._container
      details._border._radius_5._m0
        summary._no_select._no_marker #[span._arrow] Summary #[small._i (no-marker, use-arrow)]
        div._content._scrollable
          ._container
            pre._scrollable.pre
              +pageData
      //- details
    hr
    section._container
      details._border._radius_5._m0
        summary._no_select Summary #[small._i (border, radius, no-margin)]
        div._content._scrollable
          ._container
            pre._scrollable.pre
              +pageData
      //- details
    hr
