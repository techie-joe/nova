extends _html

block append vars
  - layout = 'main/_error'
  //- - SHOW_PAGEDATA = true

block append updatePageData
  - htmlClass.push('_errorpage')
  - mainClass.push('_fullview')

block meta
  include ../_core/_meta
  meta(name="description" content!=description||'[undescribed]')/

block append stylesheet
  +cssv(homeUri+'css/errorpage.css')

block append style
  style.
    body::before { content:'#{layout}' }
  //- style

block article
  article._article._container
    h1#_h1 !{heading}
    p#_p !{about}
    nav#_nav: +backLink._link._a3m Back

block side_article
  if SHOW_PAGEDATA
    aside#_side_article
      hr
      ._container._scrollable: pre.pre: +pageData()

