extends ../_core/_html

block append vars
  include _functions
  include _vars
  include _logo
  include _nav
  - layout = 'main/_html'
  - INCLUDE_THEMEJS = true

block stylesheet
  +cssv(homeUri+'css/nova.css')#_style
  +cssv(homeUri+'css/basic.css')#_basicStyle

block style
  +logo_style

mixin logo_bar
  ._color_1: ._pa_5
    +logo
    span#maindesc!=description
  hr._m0

mixin simplestHeader
  header#_header
    +logo_bar

mixin simpleHeader
  header#_header
    +logo_bar
    +main_nav

mixin basic_helloWorld
  pre._scrollable.pre.
    &nbsp;
    This is a template.
    Edit this document to get started.
    &nbsp;
    #[+backlink._link._a31|Back]

block article
  article._article
    section._container: +basic_helloWorld
    hr
    section._container: pre._scrollable.pre: +pageData()

mixin bottomRightLinks(href,text)
  ._small: +a(href||homeUri)._a2._hover_link!=text||'Home'
block footer
  footer#_footer._color
    hr._m0
    ._relative: ._absolute(style="top:.1rem;left:auto;right:0"): ._container
      block bottomRightLinks
        +bottomRightLinks
    ._container: small| &copy; !{year} !{author}
