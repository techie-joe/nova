mixin logo_style
  style.
    #logo {
      font-weight: 600;
      margin-left: -.25rem;
      margin-right: .5rem;
      padding: .25rem .5rem;
      display: inline-block;
      cursor: default;
      border-radius: .3rem;
      letter-spacing: -0.05em;
    }
    #logo .s1 { color:#000 }
    #logo .s2 { color:#1b36b0 }
    ._dark #logo .s1 { color:#fff }
    ._dark #logo .s2 { color:#7a8eea }
    a #logo { cursor:pointer }
    a #logo:hover { background-color:#fff }
    ._dark a #logo:hover { background-color:#fff3 }
    a #logo:active { opacity:.3 }
    #maindesc {
      font-size: 0.9em;
      line-height: 1.25;
      vertical-align: text-top;
    }
  //- style.

mixin _logo
  if pageid==='index'
    block
  else
    a(href=homeUri): block

mixin logo(s1,s2)
  +_logo: #logo._no_select|#[span.s1!=s1||'Nova']#[span.s2!=s2||'Builder']
