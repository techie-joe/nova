mixin menu_a(v,classes)
  if typeof v === 'string'
    |!{v}
  else
    a(href=homeUri+v[1] class=classes.join(' ') title=v[3]) !{v[2]}

mixin menu_m1(links)
  nav._container
    each v in links
      - classes = ['_no_u'];
      - if(pageid === v[0]) classes = ['_no_color']
      +l
      +menu_a(v,classes)

mixin menu_a11(links)
  nav
    each v in links
      - classes = ['_a11'];
      - if(pageid === v[0]) classes.push('_active')
      +menu_a(v,classes)

mixin menu_a2(links)
  nav._container
    each v in links
      - classes = ['_a2'];
      - if(pageid === v[0]) classes.push('_active')
      +menu_a(v,classes)

