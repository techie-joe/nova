mixin menu_m1(links)
  nav._container
    each v in links
      - classes = ['_no_u'];
      - if(pageid === v[0]) classes = ['_no_color']
      +l
      a(href=homeUri+v[1] class=classes.join(' ') title=v[3]) !{v[2]}

mixin menu_a1(links)
  nav
    each v in links
      - classes = ['_a11'];
      - if(pageid === v[0]) classes = ['_a11 _active']
      a(href=homeUri+v[1] class=classes.join(' ') title=v[3]) !{v[2]}

mixin menu_a2(links)
  nav._container
    each v in links
      - classes = ['_a2'];
      - if(pageid === v[0]) classes = ['_a2 _active']
      a(href=homeUri+v[1] class=classes.join(' ') title=v[3]) !{v[2]}

mixin main_nav
  hr._m0
  #_main_nav._color_2
    //- pageid, uri, title
    +menu_a1([
      ['basic','basic','Basic'],
      ['starter','starter','Starter'],
      ['lab','lab','Lab'],
    ])
  hr._m0


