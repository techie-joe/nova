        +fas.fa-minus.fa-rotate-90
        +fas.fa-check._tc_green
        +fas.fa-xmark._tc_red
        +fas.fa-asterisk
        +fas.fa-gear
        +fas.fa-ellipsis
        +fas.fa-ellipsis-vertical
        +fat|a
        +fat|txt
      //- ._p

      ._p._boxed_icons
        +fas.fa-bars
        +fas.fa-house
        +fas.fa-adjust
      //- ._p

      ._p: ._outline._inblock
        +fas.fa-bars
        |H
      //- ._p

      //- https://fontawesome.com/v6/search?q=
      p._text_right._small: +a('https://fontawesome.com/v6/search?q=')(target="fontawesome")._no_u More icons at Font-Awesome ...

    //- section

    hr

    section

      mixin rag(x)
        - var n = 0
        while n < x
          if(n%2==0)
            .io2
              +fas.fa-bars
              |H
          else
            .io1 &nbsp;
          - n++
      //- mixin

      .g.demo.gridlines

        .u._t1: +rag(13)
        .u._t2: +rag(12)
        .u._t3: +rag(11)
        .u._t4: +rag(10)
        .u._t5: +rag(9)
        .u._t6: +rag(8)
        .u._t7: +rag(7)
        .u._t8: +rag(6)
        .u._t9: +rag(5)
        .u._t10: +rag(4)

      //- g

    //- section