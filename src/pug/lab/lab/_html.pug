extends ../../_basic/_html

block header
  +simplestHeader
  +backNav

mixin btns
  style.
    #btns button {
      margin: .1em;
      font-size: 0.8rem;
      min-height: 1.5rem;
      vertical-align: top;
      line-height: inherit;
    }
  section._container._indiv#btns: block

mixin boxa
  ._color_1._radius_5&attributes(attributes): block

mixin boxap(menu)
  +boxa._p._pad&attributes(attributes)
    if(menu)
      +menu_a2(menu)
    else
      block

mixin boxaf(menu)
  +boxa._f&attributes(attributes)
    if(menu)
      +menu_a2(menu)
    else
      block
