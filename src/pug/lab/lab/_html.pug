extends ../../_basic/_html

block append vars
  - layout = 'lab/_html'
  include ../../basic/basic/_mixins

block header
  +simplestHeader
  +backNav

block append style
  style.
    #btns button { font-size:.8rem }

mixin btns
  section._container#btns._indiv: block

mixin boxa
  ._color_1._radius_5&attributes(attributes): block

mixin boxx(menu)
  ._color_1._radius_5._pad&attributes(attributes)
    if(menu)
      +menu_a2(menu)
    else
      block

mixin boxap(menu)
  +boxa._p._pad&attributes(attributes)
    if(menu)
      +menu_a2(menu)
    else
      block

mixin boxaf(menu)
  +boxa._f&attributes(attributes)
    if(menu)
      +menu_a2(menu)
    else
      block
