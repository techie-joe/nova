extends _html

block append vars
  -
    pageid      = 'lab'
    pageUrl     = siteUrl + '/lab/index.html'
    title       = `Lab`
    description = 'New feature developments'

block header
  +simpleHeader

block article
  article._article._container

    section._p1
      h3._h7| Lab experiments
      ._flex._gap_5._p
        +boxaf([
          ['lab/test','lab/test.html','Test'],
          ['lab/text','lab/text.html','Text'],
          ['lab/storage','lab/storage.html','Storage'],
          ['lab/button','lab/button.html','Button'],
          ['lab/overflow','lab/overflow.html','Overflow'],
        ])
      ._flex._gap_5._p
        +boxaf([
          ['lab/view','lab/view.html','View'],
          ['lab/multiview','lab/multiview.html','Multi View'],
        ])
        +boxaf([
          ['lab/flex','lab/flex.html','Flex'],
          ['lab/flex960','lab/flex960.html','Flex-960'],
        ])

    section._p1
      h3._h7| Templates
      +boxap([
        ['template/one','template/one','One'],
        ['template/one/index_','template/one/index_.html','&middot;&middot;','Info'],
      ])
      +boxap([
        ['template/basic','template/basic','Basic'],
        ['template/basic/index_','template/basic/index_.html','&middot;&middot;','Info'],
      ])
      +boxap([
        ['template/core','template/core','Core'],
        ['template/core/index_','template/core/index_.html','&middot;&middot;','Info'],
      ])

    section._p1
      h3._h7| Upcoming features
      ._container: pre._scrollable.pre.

        ['logo','logo','Logo'],
        ['menu','menu','Menu'],
        ['color','color','Color'],
        ['basic/image','basic/image.html','Image'],
        ['lab/fullscreen','lab/fullscreen.html','Full Screen / Full Scroll'], // see view
        ['basic/i-flat','basic/i-flat.html','Flat Icons'],
        ['basic/i-emoji','basic/i-emoji.html','Emoji Icons'],
        ['themejs','themejs','ThemeJS'],
        ['json','json','JSON'],
        ['vanamir','vanamir','Vanamir'],

