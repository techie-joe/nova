block append style
  +css('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css')
  style.
    a.__full,
    ._hover_show.__full,
    ._hover_show a.__full { display:block;text-align:left }

    ._hover_show { display:inline-block;position:relative }
    ._hover_show > ._content {
      position:absolute;
      z-index:1;top:100%;left:0;
      overflow:hidden;
      transition:max-width .4s ease .2s, max-height .4s ease .2s;
      max-width:0px;max-height:0px;
    }
    ._hover_show._hover > ._content,
    ._hover_show:hover > ._content { overflow:visible !important;max-width:300px;max-height:300px }
    ._hover_show ._hover_show > ._content { left: 1rem }

    ._click_show { display:block;position:relative }
    ._click_show ._content {
      overflow:hidden;
      transition:max-width .4s ease, max-height .4s ease;
      max-width:0px;max-height:0px;
    }
    ._click_show.open,
    ._click_show.open ._content { overflow:visible !important;height:100%;max-width:100%;max-height:100% }

    ._foac,._foac * { white-space:nowrap !important;overflow:hidden !important }

  //- style.

    ._a a._hover_show:visited,
    ._a a._hover_show:hover,
    ._a a._hover_show { color:inherit;text-decoration:none }

