  //- aside
  script.
    (()=>{
      var m = 'all';
      const
      w = window,
      d = document,
      setMedia = (id,media) => { d.getElementById(id).setAttribute("media",media) },
      disableStyle = ()=>{
        m=m==='all'?'x':'all';
        mi=m==='all'?'x':'all';
        setMedia("_coreStyle",mi);
        setMedia("_style",m);
        setMedia("_basicStyle",m);
      };
      Object.assign(w.test=w.test||{},{
        disableStyle
      });
    })();
  //- script.

