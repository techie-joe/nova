block append vars
  -
    pageid      = 'lab/overflow'
    pageUrl     = siteUrl + '/lab/overflow.html'
    title       = `Overflow`
    description = 'Handling overflow'

block article
  article._article

    section._container: pre.pre.
      // Handling overflow ..
    //- pre.

    hr._mb0

    style.
      #scrollbox { width:200px;height:200px }
      #scrollbox .boxline { width:150%;height:150% }
    section._container
      #scrollbox._scroll._m_center: .boxline._boxline._pa_5
        ._mono._small| content that is #[+repeat(30)| way too long ]

    hr._mt0

    style.

      .oo {
        display:inline-block;
        width:12rem;
      }
      .o {
        display:inline-block;
        width:12rem;
        height:12rem;
        margin:.5rem;
        vertical-align:top;
        padding: .25rem;
        font-size: 0.9em;
        overflow:auto;
      }
      .top {
        position:absolute;
        top:0;left:0;
      }
      .p { padding:.4em 0;line-height:1em; }
      .q { padding:.4em;line-height:1em; }
      .s { }
      .a {
        display:inline-block;
        padding:.6rem;
      }
      .b {
        display:inline-block;
        outline: 1px solid tomato;
        color:tomato !important;
        text-decoration:none !important;
        text-align:center;
        padding:.2em .4em;
      }      
      ._ellipsis {
        overflow:hidden !important;
        text-overflow: ellipsis;
      }
      ._mask {
        overflow:hidden !important;
        mask: linear-gradient(to left, transparent 0%, black 20%);
      }
      ._mask_both {
        overflow:hidden !important;
        mask: linear-gradient(to left, transparent 0%, black 20%, black 80%, transparent 100%);
      }
      ._snap { scroll-snap-type: x mandatory }
      ._snap ._snap-item { scroll-snap-align: center }

      /* -------------------------------------------------------- */

      ._hover_show { display:block;margin:1px }
      ._hover_show.__active ._trigger,
      ._hover_show ._trigger {
        cursor:pointer;
        transition: background-color .2s;
      }
      ._hover_show ._item { position:relative }
      ._hover_show.__absolute ._content { position:absolute }
      ._hover_show ._content {
        overflow:hidden;
        transition:max-height .2s ease .4s;
        max-height:0px;
      }
      ._hover_show.__active ._trigger,
      ._hover_show:hover ._trigger { background-color:#8883 }
      ._hover_show.__active ._content,
      ._hover_show:hover ._content { max-height:100px }

      ._a a._hover_show:visited,
      ._a a._hover_show:hover,
      ._a a._hover_show { color:inherit;text-decoration:none }

    section._container

      .o._outline._relative._scrollable
