//- pageid, uri, title

mixin main_menu
  nav: +menues(['_a1m'],[
    ['pure','pure','Pure'],
    ['basic','basic','Basic'],
    ['lab','lab','Lab'],
  ])

mixin main_nav
  #_main_nav._color_2._flex
    ._f: +main_menu
    ._fit: +changeThemeLink._a1m: +isvg(svgi.compare,'_cicon')