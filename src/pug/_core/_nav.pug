mixin main_nav
  #_main_nav._color_1._flex
    nav._fill._ph_5._pv_25: +menues(['_a3'],nova_menu)
    ._fit._text_right._ph_5._pa_25: +changeThemeLink._a2: +isvg(svgi.compare,'_cicon')