extends _html_i

block append vars
  -
    pageid      = 'basic/i-font-awesome'
    pageUrl     = siteUrl + '/basic/i-font-awesome.html'
    title       = `Font Awesome Icons`
    description = 'Implementing awesomeness.'

block append stylesheet
  +css('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css')

mixin section_icons
  style.
    .icons ._icon {
      margin-right:.5em;
      font-size: 1.5em; /* 1.5em = 36px | 1em = 24px */
      line-height:1.5;
    }
  section._p.icons
    +fas.fa-bars
    +fas.fa-list
    +fas.fa-house
    +fas.fa-adjust
    +far.fa-circle-user
    +fas.fa-angle-left
    +fas.fa-angles-left
    +fas.fa-arrow-left
    +fas.fa-caret-left
    +fas.fa-rotate-left
    +fas.fa-share.fa-flip-horizontal
    +fas.fa-hand-point-left
    +fas.fa-magnifying-glass
    +far.fa-comment
    +far.fa-message
    +fas.fa-inbox
    +fas.fa-question
    +fas.fa-circle-info
    +fas.fa-location-dot
    +fas.fa-phone
    +far.fa-envelope
    +far.fa-credit-card
    +far.fa-image
    +far.fa-address-card
    +fas.fa-border-all
    +far.fa-square
    +far.fa-square-minus
    +far.fa-square-check._tc_contra
    +far.fa-star
    +fas.fa-star._tc_orange
    +far.fa-heart
    +fas.fa-heart._tc_red
    +far.fa-thumbs-up
    +fas.fa-thumbs-up._tc_blue
    +fas.fa-pen
    +fas.fa-arrow-right-to-bracket.fa-rotate-90
    +fas.fa-download
    +fas.fa-print
    +far.fa-floppy-disk
    +fas.fa-code
    +fas.fa-plus
    +fas.fa-minus
    +fas.fa-minus.fa-rotate-90
    +fas.fa-check._tc_green
    +fas.fa-xmark._tc_red
    +fas.fa-asterisk
    +fas.fa-gear
    +fas.fa-ellipsis
    +fas.fa-ellipsis-vertical
    +fas.fa-rotate-180|☄
    br
    +fas|a
    +fas|txt
    +fas.__spin|☯
    +fas.__spin|☢
    +fas.fa-compass.__spin
    +fas.fa-circle-notch.__spinr
    +fas.fa-spinner.__spin
    +fas.fa-gear.__spin
    +fas.fa-rotate-left.__spinr
    +far.fa-star.__spin
  //- section

mixin section_textIcons
  style.
    .textIcons ._icon { font-size:1.5em;letter-spacing: 0.2em; }
    .textIcons .fas { line-height:1.25;text-align:left; }
  //- 1.5em : based on the size of + sign
  section.textIcons._p.selectable: i._icon: i.fas: +textIcons
  hr
  section.textIcons._p.selectable: i._icon: i.fas._no_b: +textIcons

mixin section_sizing
  mixin rag(x)
    - var n = 0
    while n < x
      if(n%2==0)
        .io2 #[+fas.fa-bars]H_
      else
        .io1 &nbsp;
      - n++
  //- mixin
  section._flex

    ._f.g.demo.gridlines(style="flex: 1 0 340px;")
      .u._t1: +rag(13)
      .u._t2: +rag(12)
      .u._t3: +rag(11)
      .u._t4: +rag(10)
      .u._t5: +rag(9)
      .u._t6: +rag(8)
      .u._t7: +rag(7)

    ._f.g.demo.gridlines(style="flex: 1 0 340px;")
      .u._t8: +rag(5)
      .u._t9: +rag(5)
      .u._t10: +rag(5)

  //- section

mixin section_heights
  section.section_heights

    style.
      .blok { font-size:4em;line-height:1.17; }
    ._flex._p.blok
      ._f2: ._boxline| Normal
      ._f2: ._boxline: span._outline| Normal
      ._f2: ._boxline
        span._outline: +fas.fa-bars
        span._outline| H
        span._outline: +fas.fa-adjust
        span._outline: +fas|&times;
        span._outline: +fas|&plus;
      ._f2: ._boxline
        span._outline: i._icon|≡
        span._outline| H
        span._outline: i._icon|☯
        span._outline: i._icon|&times;
        span._outline: i._icon|&plus;
    //- flex

    ._flex._p.gridlines24
      ._f2| Normal texts.
      ._f2: span._outline| Normal texts.
      ._f2
        span._outline: +fas.fa-bars
        span._outline| H
        span._outline: +fas.fa-adjust
        span._outline: +fas|&times;
        span._outline: +fas|&plus;
      ._f2
        span._outline: i._icon|≡
        span._outline| H
        span._outline: i._icon|☯
        span._outline: i._icon|&times;
        span._outline: i._icon|&plus;
      ._f2: span._outline
        +fas.fa-bars
        | H
        +fas.fa-adjust
        +fas|&times;
        +fas|&plus;
      ._f2: span._outline
        i._icon|≡
        | H
        i._icon|☯
        i._icon|&times;
        i._icon|&plus;
    //- flex._p

  //- section

block article
  article._article._960: ._container

    +section_icons
    hr
    +section_textIcons
    hr
    +section_heights
    hr
    +section_sizing
    hr
    aside._text_right
      //- | https://fontawesome.com/v6/search?q=
      p._small: +a('https://fontawesome.com/v6/search?q=')(target="fontawesome")._hover_u More icons at Font Awesome ...
