    ['basic/flex','basic/flex.html','Flex'],
    ['basic/container','basic/container.html','Container'],
    ['basic/alignment','basic/alignment.html','Alignment'],
  ])

mixin basic_nav
  ._color_1._pad: +basic_nav_

mixin icons_nav_
  +menu_a2([
    ['basic/i-text','basic/i-text.html','Text Icons'],
    ['basic/i-font-awesome','basic/i-font-awesome.html','Font Awesome Icons'],
    ['basic/i-svg','basic/i-svg.html','SVG Icons'],
  ])

mixin icons_nav
  ._color_1._pad: +icons_nav_

block header
  +simpleHeader
  +basic_nav

mixin boxa
  ._color_1._radius_5&attributes(attributes): block

mixin boxap(menu)
  +boxa._p._pad&attributes(attributes)
    if(menu)
      +menu_a2(menu)
    else
      block

mixin boxaf(menu)
  +boxa._f&attributes(attributes)
    if(menu)
      +menu_a2(menu)
    else
      block
