block append vars
  -
    pageid      = 'index'
    pageUrl     = siteUrl + '/index.html'
    title       = name
    description = 'Simple framework for websites and web applications.'

block append style
  style.
    #logo {
      display: block;
      text-align: center;
      font-size: 3rem;
      margin: 1em auto;
    }
    #maindesc {
      font-size:1rem;
      text-align: center;
      position: relative;
      top: -3em;
      margin:1em auto;
      font-weight: 400;
      color: inherit;
    }
  //- style.

