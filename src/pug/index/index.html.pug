extends _html

block append vars
  -
    pageid      = 'index'
    pageUrl     = siteUrl + '/index.html'
    title       = name
    description = 'Simple framework for websites and web applications.'

block append style
  style.
    #logo {
      display: block;
      text-align: center;
      font-size: 3rem;
      margin: 1em auto;
    }
    #maindesc {
      font-size:1rem;
      text-align: center;
      position: relative;
      top: -3em;
      margin:1em auto;
      font-weight: 400;
      color: inherit;
    }
  //- style.

block header
  header#_header
    ._color_1._pad: ._center_m._table
      h1: +logo
      h2#maindesc|!{description}
    hr._m0
    +main_nav

block article
  article._article._container
    section(style="margin:1em auto"): pre._scrollable.pre.
      Name         : !{name}
      Title        : !{title}
      Description  : !{description}
      Version      : !{version}

      Author       : !{author}
      Year         : !{year}
      LICENSE      : !{license}

      URL          : !{pageUrl}
      URI          : !{homeUri} 

      Last updated : !{today}
    |

block bottomRightLinks
  +bottomRightLinks('/')

